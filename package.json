{
  "name": "oreon-modern-site",
  "version": "1.0.0",
  "description": "Modern website for Oreon Project using Tailwind CSS + DaisyUI",
  "main": "index.html",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "clean": "rm -rf dist/",
    "serve": "echo 'Build completed - static files ready for deployment'"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "daisyui": "^4.7.2"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.13"
  }
}
